                                     const double epsf,const double epsx,
                                     const int maxits)
  {
//--- function call
   CMinLBFGS::MinLBFGSSetCond(state.GetInnerObj(),epsg,epsf,epsx,maxits);
//--- exit the function
   return;
  }
